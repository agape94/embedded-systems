<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/battery_charge_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"

            app:layout_constraintBottom_toTopOf="@+id/current_speed_layout"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/battery_level_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_level"
                android:textSize="25sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@id/battery_percentage_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/battery_percentage_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_charge_0"
                android:textSize="25sp"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/battery_level_label"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/current_speed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toTopOf="@+id/set_speed_layout"
            app:layout_constraintTop_toBottomOf="@+id/battery_charge_layout">

            <TextView
                android:id="@+id/current_speed_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_speed"
                android:textSize="25sp"
                app:layout_constraintEnd_toStartOf="@id/current_motor_speed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/current_motor_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/motor_speed"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/current_speed_label"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/set_speed_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/set_speed_text_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/current_speed_layout">

            <SeekBar
                android:id="@+id/motorSpeedSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:progress="@android:integer/config_shortAnimTime"
                android:progressDrawable="@drawable/seekbar_style"
                android:splitTrack="false"
                android:thumb="@drawable/custom_thumb" />
        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/set_speed_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_speed_layout">

            <EditText
                android:id="@+id/rpm_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/_500"
                android:inputType="number"
                android:maxLength="3"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/rpm_edit_text"
                android:text="@string/rpm"
                android:textSize="30sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/rpm_edit_text"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/set_speed_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_speed_text_layout"
            android:layout_marginTop="30dp"
            android:text="@string/set_speed"
            android:textColor="@color/colorButtonText"
            android:textSize="20sp"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/save_speed_btn"
            app:layout_constraintTop_toBottomOf="@+id/set_speed_text_layout" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/load_speed_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_speed_text_layout"
            android:layout_marginTop="30dp"
            android:text="@string/load"
            android:textColor="@color/colorButtonText"
            android:textSize="20sp"
            android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:backgroundTint="@color/colorPrimaryDark"
            app:layout_constraintEnd_toStartOf="@id/save_speed_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/set_speed_text_layout" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/save_speed_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/set_speed_text_layout"
            android:layout_marginTop="30dp"
            android:text="@string/save"
            android:textColor="@color/colorButtonText"
            android:textSize="20sp"
            android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toStartOf="@id/set_speed_btn"
            app:layout_constraintStart_toEndOf="@id/load_speed_btn"
            app:layout_constraintTop_toBottomOf="@+id/set_speed_text_layout" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/stop_speed_btn"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/save_speed_btn"
            android:layout_margin="25dp"
            android:text="@string/stop"
            android:textColor="@color/colorButtonText"
            android:textSize="20sp"
            android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
            app:backgroundTint="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/save_speed_btn" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>